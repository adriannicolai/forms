<% if form.present? %>
    <div class="card form_card_container" data-ecrypted_form_id="<%= encrypt(form["id"]) %>">
        <div class="card_clickable_area">
            <div class="card-body">
                <h5 class="card-title"><%= form["title"] %></h5>
                <p><%= form["last_modified_date"] %></p>
            </div>
        </div>
        <div class="card-footer">
        <button class="delete_form_trigger">Delete Form</button>
            <p><%= form["number_of_responses"] %>  <%= "response".pluralize(form["number_of_responses"] === 0 ? 1 : form["number_of_responses"] ) %></p>
        </div>
    </div>
<% end %>